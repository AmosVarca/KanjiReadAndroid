<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

    <fragment
            android:id="@+id/nav_host_fragment_content_main"
            android:name="androidx.navigation.fragment.NavHostFragment"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:defaultNavHost="true"
            app:navGraph="@navigation/nav_graph" app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintVertical_bias="0.0"/>

    <TextView
            android:layout_width="154dp"
            android:layout_height="154dp"
            android:textSize="130sp"
            app:fontFamily="@font/hinamincho_regular"
            android:layout_gravity="center"
            android:id="@+id/kanjiView"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.498" app:layout_constraintVertical_bias="0.256"/>
    <EditText
            android:layout_width="240dp"
            android:layout_height="58dp"
            android:inputType="textCapCharacters"
            android:hint="Digita la lettura Kun"
            android:ems="10"
            android:textColor="#007575"
            android:id="@+id/editTextKunReading"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintHorizontal_bias="0.497"
            app:layout_constraintVertical_bias="0.499"/>
    <EditText
            android:layout_width="240dp"
            android:layout_height="58dp"
            android:inputType="textCapCharacters"
            android:hint="Digita la lettura On"
            android:ems="10"
            android:textColor="#007575"
            android:id="@+id/editTextOnReading"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintHorizontal_bias="0.497"
            app:layout_constraintVertical_bias="0.613"/>
    <Button
            android:text="Controlla"
            android:layout_width="148dp"
            android:layout_height="46dp" android:id="@+id/controlla"
            tools:ignore="MissingConstraints"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintHorizontal_bias="0.197"
            app:layout_constraintVertical_bias="0.718"
    />
    <Button
            android:text="Non Ricordo"
            android:layout_width="148dp"
            android:layout_height="46dp" android:id="@+id/nonRicordo"
            tools:ignore="MissingConstraints"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintHorizontal_bias="0.806"
            app:layout_constraintVertical_bias="0.718"
    />
</androidx.constraintlayout.widget.ConstraintLayout>